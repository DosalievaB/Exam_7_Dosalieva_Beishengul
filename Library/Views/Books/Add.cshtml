@model Book
@{
    ViewBag.Title = "Добавление книги";
}

<h2>Добавление книги</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" asp-controller="Books" method="post">
           <div class="form-group">
                <label>Наименование книги</label>
                <input asp-for="Name" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Автор книги</label>
                <input asp-for="Author" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Изображение</label>
                <input asp-for="Image" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Год выпуска</label>
                <input asp-for="YearIssue" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Описание</label>
                <input asp-for="Description" type="text" class="form-control" />
            </div>
           <div class="form-group">
                <label>Категория</label>             
                <select asp-for="CategoryId" class="form-control" required>
                    <option value="">Выберите категорию</option>
                    @if (ViewData["Categories"] != null)
                    {
                        foreach (var category in (List<Category>)ViewData["Categories"])
                        {
                                    <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
            </div>
            @if (ViewBag.Message != null)
            {
                    <div class="alert alert-info">@ViewBag.Message</div>
            }
            <button type="submit" class="btn btn-primary">Добавить</button>
            <a href="#" onclick="history.back();" class="btn btn-primary">Назад</a>
        </form>
    </div>
</div>
