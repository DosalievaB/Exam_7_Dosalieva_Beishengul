<form class="form-inline">
    <lable>
        Выберите категорию
    </lable>
    <select name="categoryId" class="form-control">
        @foreach(var c in Model.Categories)
        {
            <opion value="@c.Id">@c.Name</opion>
        }
<input type="submit" value="Фильтровать"/>
    </select>
</form>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count == 0)
        {
                <p>Категорий еще нет</p>
        }
        else
        {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Описание</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var category in Model)
                    {
                                <tr>
                                    <td>@category.Name</td>
                                    <td>@category.Description</td>
                                    <td>
                                        <a class="btn btn-dark" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id">Удалить</a>
                                        <a class="btn btn-dark" asp-controller="category" asp-action="Update" asp-route-categoryId="@category.Id">Редактировать</a>
                                    </td>
                                </tr>
                    }
                    </tbody>
                </table>
        }
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Add">Добавить категорию</a>
    </div>
</div>
